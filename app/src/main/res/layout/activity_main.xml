<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="8"
    tools:context="com.nimacu.calculator988.MainActivity">

    <TextView
        android:layout_marginTop="16dp"
        android:layout_weight="2.5"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:id="@+id/txtOperation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="4"
        android:lines="3"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="@dimen/textView_text_big">

    </TextView>


    <TextView
        android:id="@+id/txtResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="10dp"
        android:maxLines="1"
        android:singleLine="true"
        android:textAlignment="viewEnd"
        android:textSize="@dimen/textView_text_small">

    </TextView>

    <View

        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@color/gray">

    </View>

    <TableLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="24dp"
        android:layout_weight="5.25"
        android:orientation="vertical"
        android:weightSum="5">

        <TableRow

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4">

            <Button
                android:id="@+id/btnAC"
                style="@style/TextAppearance.AppCompat"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?selectableItemBackground"
                android:text="@string/ac"
                android:textColor="#EF6C00"
                android:textSize="@dimen/button_text_size_small"
                android:textStyle="bold">

            </Button>

            <Button
                android:id="@+id/btnOpenBrace"
                style="@style/TextAppearance.AppCompat"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?selectableItemBackground"
                android:text="@string/open_brace"
                android:textColor="#EF6C00"
                android:textSize="@dimen/button_text_size_big"
                android:textStyle="bold">

            </Button>

            <Button
                android:id="@+id/btnCloseBrace"
                style="@style/TextAppearance.AppCompat"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?selectableItemBackground"
                android:text="@string/close_brace"
                android:textColor="#EF6C00"
                android:textSize="@dimen/button_text_size_big"
                android:textStyle="bold">

            </Button>

            <ImageButton
                android:id="@+id/btnDivision"
                style="@style/TextAppearance.AppCompat"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?selectableItemBackground"
                android:src="@drawable/ic_division"
                tools:ignore="ContentDescription">

            </ImageButton>

        </TableRow>

        <TableRow

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4">

            <Button

                android:id="@+id/btn7"
                style="@style/TextAppearance.AppCompat"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?selectableItemBackground"
                android:text="@string/_7"
                android:textSize="@dimen/button_text_size_big">

            </Button>

            <Button

                android:id="@+id/btn8"
                style="@style/TextAppearance.AppCompat"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?selectableItemBackground"
                android:text="@string/_8"
                android:textSize="@dimen/button_text_size_big">

            </Button>

            <Button

                android:id="@+id/btn9"
                style="@style/TextAppearance.AppCompat"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?selectableItemBackground"
                android:text="@string/_9"
                android:textSize="@dimen/button_text_size_big">

            </Button>

            <ImageButton
                android:id="@+id/btnMultiply"
                style="@style/TextAppearance.AppCompat"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?selectableItemBackground"
                android:src="@drawable/ic_multiply">

            </ImageButton>

        </TableRow>

        <TableRow

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4">

            <Button

                android:id="@+id/btn4"
                style="@style/TextAppearance.AppCompat"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?selectableItemBackground"
                android:text="@string/_4"
                android:textSize="@dimen/button_text_size_big">

            </Button>

            <Button

                android:id="@+id/btn5"
                style="@style/TextAppearance.AppCompat"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?selectableItemBackground"
                android:text="@string/_5"
                android:textSize="@dimen/button_text_size_big">

            </Button>

            <Button

                android:id="@+id/btn6"
                style="@style/TextAppearance.AppCompat"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?selectableItemBackground"
                android:text="@string/_6"
                android:textSize="@dimen/button_text_size_big">

            </Button>

            <ImageButton
                android:id="@+id/btnMinus"
                style="@style/TextAppearance.AppCompat"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?selectableItemBackground"
                android:src="@drawable/ic_minus">

            </ImageButton>

        </TableRow>

        <TableRow

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4">

            <Button

                android:id="@+id/btn1"
                style="@style/TextAppearance.AppCompat"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?selectableItemBackground"
                android:text="@string/_1"
                android:textSize="@dimen/button_text_size_big">

            </Button>

            <Button

                android:id="@+id/btn2"
                style="@style/TextAppearance.AppCompat"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?selectableItemBackground"
                android:text="@string/_2"
                android:textSize="@dimen/button_text_size_big">

            </Button>

            <Button

                android:id="@+id/btn3"
                style="@style/TextAppearance.AppCompat"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?selectableItemBackground"
                android:text="@string/_3"
                android:textSize="@dimen/button_text_size_big">

            </Button>

            <ImageButton
                android:id="@+id/btnPlus"
                style="@style/TextAppearance.AppCompat"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?selectableItemBackground"
                android:src="@drawable/ic_plus">

            </ImageButton>

        </TableRow>

        <TableRow

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?selectableItemBackground"
                android:layoutDirection="rtl"
                android:src="@drawable/ic_backspace"
                android:text="@string/back"
                android:textColor="#EF6C00"
                android:textSize="@dimen/button_text_size_big">

            </ImageButton>

            <Button

                android:id="@+id/btn0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?selectableItemBackground"
                android:text="@string/_0"
                android:textSize="@dimen/button_text_size_big">

            </Button>

            <Button

                android:id="@+id/btnDot"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?selectableItemBackground"
                android:text="@string/dot"
                android:textSize="@dimen/button_text_size_big">

            </Button>

            <FrameLayout

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/btnEqual"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/circle_shape"
                    android:gravity="center"
                    android:text="@string/equal"
                    android:textColor="#2C2A2A"
                    android:textSize="@dimen/textView_text_big"
                    android:textStyle="bold"
                    tools:ignore="TextContrastCheck">

                </TextView>

            </FrameLayout>

        </TableRow>

    </TableLayout>

</LinearLayout>